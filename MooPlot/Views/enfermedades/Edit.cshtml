@model MooPlot.Models.enfermedade

@{
    ViewBag.Title = "Edit";
}

<div class="vertical-pad"></div>

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>enfermedade</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_enfermedad)

        <div class="form-group">
            @Html.LabelFor(model => model.Nom_Enfermedad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nom_Enfermedad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nom_Enfermedad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default"><i class="fa fa-save"></i> Save</button>
                <a class="btn btn-default " onclick="location.href='@Url.Action("Index", "enfermedades")'"><i class="fa fa-arrow-left"></i> Regresar</a>
            </div>
        </div>
    </div>
}

<div class="vertical-pad"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
