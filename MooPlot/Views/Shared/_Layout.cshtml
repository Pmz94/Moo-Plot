<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - mooPlot</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/mdb.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-fixed-top navbar-dark primary-color">

        <!-- Collapse button-->
        <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#collapseEx2">
            <i class="fa fa-bars"></i>
        </button>

        <div class="container">


            <!--Collapse content-->
            <div class="collapse navbar-toggleable-xs" id="collapseEx2">
                <!-- Brand -->
                <a class="navbar-brand" href="../Home/index">
                    <img src="~/img/mooplot.png" width="120" height="25" alt="">
                </a>
                <!--Links-->
                <ul class="nav navbar-nav">
                    <li class="nav-item ">
                        <a class="nav-link" href="../Home/index">Inicio <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../animales/">Animales</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="../ranchos/">Ranchos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../animales_enfermos/">Enfermedades</a>
                    </li>
                </ul>
                <!--login berga form-->
                    

                <ul class="nav navbar-nav float-xs-right">
                    <li class="nav-item ">
                        <a class="nav-link" href="#"><i class="fa fa-user"></i> Ingresar <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </div>
            <!--/.Collapse content-->

        </div>

    </nav>
    <div class="container body-content">
        @RenderBody()
        
        
    </div>
    <footer class="footer page-footer primary-color center-on-small-only">
        <!--Footer Links-->
        <div class="container">
            <div class="row">
                <!--First column-->
                <div class="col-md-12 text-xs-center">
                    <h5 class="title">Necesitas Ayuda?</h5>
                    <p>Nosotros - Contactanos - Soporte</p>
                </div>
                <!--/.First column-->
            </div>
        </div>
        <!--/.Footer Links-->
        <!--Copyright-->
        <div class="footer-copyright">
            <div class="container-fluid">
                © 2016 Copyright: <a href="http://www.erickdelfin.me">Moo Plot</a>
            </div>
        </div>
        <!--/.Copyright-->

    </footer>
   
    <script type="text/javascript" src="~/Scripts/tether.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/mdb.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
