<div class="vertical-pad"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>
    $(document).ready(function () {
        document.getElementById("fechaMuertePanel").style.display = "none";

            $('#statusT').click(function () {
                $('#fechaMuertePanel').show("fast");
            });
            $('#statusF').click(function () {
                $('#fechaMuertePanel').hide("fast");
            });
           
        });
</script>

